<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">

  <input type="hidden" name="_method" value="PATCH">

  <h3>Pet Name: <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>"></h3><br />

  <h3>Owners</h3>
  <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input><br>
  <% end %>

  <br>

  <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br><br>


  <input type="submit" name="submit" value="Update Pet">
</form>
