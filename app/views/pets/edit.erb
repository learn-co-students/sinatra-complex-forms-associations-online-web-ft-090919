<h1>Update Pet</h1>
<form method="POST" action="/pets/<%=@pet.id%>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Pet Name: <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"></label>
  <br>
  <h2>Select Owner</h2>
  <%@owners.each do |owner|%>
    <label><input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner%>><%=owner.name%></label>
    <br>
  <%end%>
  <br>
  <h2>Or create new owner</h2>
  <label>New Owner Name: <input type="text" id="owner_name" name="owner[name]"></label>
  <br>
  <input type="submit" value="Update Pet">
</form>


