<h1>Create a new Pet</h1>
<form method="POST" action="/pets">
  <label>Name: <input type="text" name="pet[name]" id="pet_name"></label>
  <br>
  <h2>Existing Owners</h2>
  <%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>"><label><%=owner.name%></label>
    <br>
  <%end%>
  <br>
  <h2>Or Create a new owner</h2>
  <label>New Owner Name: <input type="text" name="owner[name]" id="owner_name"></label>
  <br>
  <input type="submit" value="Create Pet">
</form>
